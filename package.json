{
  "name": "databricks-sync",
  "displayName": "Databricks Sync",
  "publisher": "marvinnahmias",
  "icon": "images/icon.png",
  "description": "Edit/Sync Databricks files directly in VS Code",
  "keywords": [
    "databricks",
    "sync",
    "notebooks",
    "data",
    "filesystem"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/local/databricks-sync"
  },
  "version": "0.0.5",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onFileSystem:databricks",
    "onCommand:databricksSync.openWorkspace"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "Databricks Sync",
      "properties": {
        "databricksSync.host": {
          "type": "string",
          "description": "Databricks Workspace URL (e.g., https://adb-1234567890123456.7.azuredatabricks.net)"
        },
        "databricksSync.token": {
          "type": "string",
          "description": "Databricks Personal Access Token (PAT)",
          "format": "password"
        }
      }
    },
    "commands": [
      {
        "command": "databricksSync.openWorkspace",
        "title": "Databricks: Open Workspace"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.80.0",
    "@types/node": "16.x",
    "typescript": "^5.1.3"
  },
  "dependencies": {
    "axios": "^1.6.0"
  }
}
